<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, options = {:autofocus => true, :placeholder => "Your Recipe's Name" }%>
  </div>
  <div class="field">
    <%= f.label :servingsize %><br>
    <%= f.number_field :servingsize %>
  </div>
  <div class="field">
    <%= f.label :description, :style => "margin-top: 15px" %><br>
  </div>
  <div class="">
    <div class="">
      <%= f.text_area :description, :class => "form-control", :style => "height: 80px;" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :ingredients, :style => "margin-top: 15px" %><br>
  </div>
  <div class="">
    <div class="">
      <%= f.text_area :ingredients, :class => "form-control", :style => "height: 180px;" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :instructions, :style => "margin-top: 15px" %><br>
  </div>
  <div class="">
    <div class="">
      <%= f.text_area :instructions, :class => "form-control", :style => "height: 180px;" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :picture, :style => "margin-top: 15px" %><br>
    <%= f.file_field :picture%>
  </div>
  <div class="col-sm-12">
    <%= f.submit :class => "btn btn-primary button-margin" %>
  </div>

<% end %>
